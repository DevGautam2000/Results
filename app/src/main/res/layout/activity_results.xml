<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text"
    android:orientation="vertical"
    android:padding="@dimen/dimen20dp"
    tools:context=".Results">

    <TextView
        android:id="@+id/gpaTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_danger"
        android:gravity="center"
        android:padding="@dimen/dimen12dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen20dp"
        android:visibility="visible"
        tools:text="@string/gpa_9_47" />

    <TextView
        android:id="@+id/nameTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen8dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:padding="@dimen/dimen9dp"
        android:textColor="@color/washed_purple_inversion"
        android:textSize="@dimen/dimen15dp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="@string/name" />

    <TextView
        android:id="@+id/infoTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen20dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:padding="@dimen/dimen9dp"
        android:textColor="@color/dark_blue_inversion"
        android:textSize="@dimen/dimen15dp"
        android:visibility="visible"
        tools:text="@string/info" />
    <!--        tools:text="ID: 201900099 for May/June 2020" />-->

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/shimmer_effect" />

            <include layout="@layout/shimmer_effect" />

            <include layout="@layout/shimmer_effect" />

            <include layout="@layout/shimmer_effect" />

            <include layout="@layout/shimmer_effect" />

            <include layout="@layout/shimmer_effect" />

            <include layout="@layout/shimmer_effect" />

            <include layout="@layout/shimmer_effect" />

            <include layout="@layout/shimmer_effect" />


        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>